<% include partials/header.ejs%>
<div class="ui main text container">
  <div class="ui huge header single"><%= blog.title %></div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui fluid image" src="<%= blog.image%>">
      <br>
      <div class="content">
        <p><%= blog.blog %></p>
      </div>
    </div>
  </div>
  <div class="modify">
    <a class="ui orange basic button" href="/blogs/<%= blog._id%>/edit">Edit Blog</a>
    <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
      <button class="ui red basic button">Delete Blog</button>
    </form>
  </div>
</div>


<% include partials/footer.ejs%>