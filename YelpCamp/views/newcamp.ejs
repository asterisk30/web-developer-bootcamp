<% include partials/header %>

<h1 class="text-center">Create a new campground here</h1>
<div class="container">
  <div class="row">
    <div style="width: 50%; margin: 30px auto;">
      <form action="/campground" method="POST">
        <div class="form-group">
        <input class="form-control" type="text" name="name" placeholder="name" required>
        </div>
        <div class="form-group">
        <input class="form-control" type="text" name="image" placeholder="image url" required>
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="price" step="0.5" min="0" placeholder="price per night">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="location" placeholder="location">
        </div>
        <div class="form-group">
          <textarea name="desc" class="form-control" rows="15" placeholder="description goes here..."></textarea>
        </div>
        <div class="form-group">
        <button class="btn btn-lg btn-success btn-block">Submit</button>
      </div>
      </form>
      <a href="/campground">View All Campgounds</a>
    </div>
  </div>
</div>

<% include partials/footer %>